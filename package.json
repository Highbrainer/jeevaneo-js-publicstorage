{
	"name": "publicstorage",
	"version": "0.0.9",
	"author": "Jeevaneo",
	"scope": "jeevaneo",
	"dependencies": {},
	"description": "A utility class to expose a public (cross-domain) shared memory",
	"devDependencies": {
		"browserify": ">=16",
		"@babel/core": ">=7.3.4",
		"babel-preset-env": ">=7.0.0-beta",
		"babelify": ">=10",
		"cross-var": "1.1.0",
		"mkdirp": ">=0",
		"rimraf": "2.6.3",
		"npm-run-all": "4"
	},
	"keywords": [
		"cross-domain",
		"xdomain",
		"shared",
		"memory",
		"storage",
		"javascript"
	],
	"license": "ISC",
	"main": "src/index.js",
	"repository": {
		"type": "git",
		"url": "https://github.com/Highbrainer/jeevaneo-js-publicstorage.git"
	},
	"scripts": {
		"build": "run-s clean init build-lib:*",
		"init": "mkdirp dist/",
		"build-lib:browserify": "cross-var browserify --debug src/index.js > dist/$npm_package_name-$npm_package_version-bundle.js",
		"clean": "cross-var rimraf dist/*"
	},
	"browserify": {
		"transform": [
			[
				"babelify",
				{
					"presets": [
						"env"
					]
				}
			]
		]
	}
}
